{
    "builds": [
      {
        "src": "backend/*",
        "use": "@railway/python"
      },
      {
        "src": "frontend/*",
        "use": "@railway/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend"
      }
    ]
  }